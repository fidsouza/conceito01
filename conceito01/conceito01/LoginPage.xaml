<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="conceito01.LoginPage"
             Title="{Binding Title}"
             BackgroundColor="#1F4E79">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*"  />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>

            <Label Grid.Row="1" Font="Larger" TextColor="White" Text="Para iniciar logue com sua conta do facebook"
				XAlign="Center" YAlign="Center" VerticalOptions="Start" />
            <Button Grid.Row="1" Command="{Binding LoginCommand}" VerticalOptions="Center" HorizontalOptions="Center"  BackgroundColor="Transparent"  Image="facebook.png"></Button>
        </Grid>
    </ContentPage.Content>
</ContentPage>